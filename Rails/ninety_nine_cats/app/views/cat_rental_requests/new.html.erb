<h1>Make a new request</h1>

<form action="<%=cat_rental_requests_url%>" method="POST">
    <label for="status">Status:</label>
    <input type="text" name="cat_rental_request[status]" id="status"> <br>
    <br>
    <label for="s_date">Start date:</label>
    <input type="date" name="cat_rental_request[start_date]" id="s_date"><br>
    <br>
    <label for="r_date">End date:</label>
    <input type="date" name="cat_rental_request[end_date]" id="e_date"><br>
    <br>
    <label for="cat">Desired cat:</label>
    <select id="cat" name="cat_rental_request[cat_id]">  
        <option disabled selected>--select a cat--</option>
        <% @cats.each do |cat|%>
            <option value="<%=cat.id%>" > <%=cat.name%> </option>
        <%end%>
    </select> <br>
    <br> 
    <input type="submit" value="Submit">
</form>
